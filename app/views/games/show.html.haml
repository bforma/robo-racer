.mod-game
  %h1 It's a game!

  .viewport
    %header
      .round Round 3
      .status Playing 2nd cards...
      .current_event RoboBoob: move 2

    .body
      .left
        %ol.opponents
          %li
            %h3 RoboBoob
            %p.status.pending
            %ul.slots
              - 5.times do
                %li.slot
                  %span.card_empty

          %li
            %h3 Hetty-D-80
            %p.status.programmed
            %ul.slots
              %li.slot
                %span.card_M_3 3
              %li.slot
                %span.card_R_U U
              %li.slot
                %span.card_R_L L
              %li.slot
                %span.card_M_-1 -1
              %li.slot
                %span.card_M_2 2

          %li
            %h3 Droid-OK-KE
            %p.status.pending
            %ul.slots
              - 5.times do
                %li.slot
                  %span.card_empty

          %li
            %h3 Frankie
            %p.status.pending
            %ul.slots
              - 5.times do
                %li.slot
                  %span.card_empty

          %li
            %h3 Alaaaan
            %p.status.programmed
            %ul.slots
              %li.slot
                %span.card_M_3 3
              %li.slot
                %span.card_R_U U
              %li.slot
                %span.card_R_L L
              %li.slot
                %span.card_M_-1 -1
              %li.slot
                %span.card_M_2 2

          %li
            %h3 VONK
            %p.status.programmed
            %ul.slots
              %li.slot
                %span.card_M_3 3
              %li.slot
                %span.card_R_U U
              %li.slot
                %span.card_R_L L
              %li.slot
                %span.card_M_-1 -1
              %li.slot
                %span.card_M_2 2

          %li
            %h3 D[0]
            %p.status.pending
            %ul.slots
              - 5.times do
                %li.slot
                  %span.card_empty

      .right
        .table
          .board#board
            - 12.times do |y_pos|
              .row
                - 12.times do |x_pos|
                  %b{class: "tile x_#{x_pos} y_#{y_pos}"}

            - colors = %w(red yellow orange pink green brown grey lightblue)
            - 8.times do |n|
              %div{class: "robot x_#{n} y_0 #{colors[n]} face_180", id: "robot_#{n + 1}"} R#{n + 1}

        .player_area
          instruction slots

  %footer
    = link_to "Toggle Board", "javacript: void(0)", id: "show_board"

    = link_to "Remove robots", "javacript: void(0)", id: "remove_robots"

    = link_to "Play first slot", "javacript: void(0)", id: "play_sequence_01"

    = link_to "Play second slot", "javacript: void(0)", id: "play_sequence_02"

