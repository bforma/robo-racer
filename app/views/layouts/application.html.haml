!!!
%html
  %head
    %title RoboRacer

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    = flash[:notice] if flash[:notice]

    - if current_player
      = current_player.name
      = link_to "Logout", destroy_player_session_path, method: :delete
    - else
      = link_to "Login", new_player_session_path

    = yield
